<div class="background-box"></div>
<%- layout('./layouts/main.ejs') %> 

<h1 class="text-center mt-5 text-white popp">Empleo</h1>

<div class="m-5 d-flex gap-3 justify-content-center">
<% if(user.job) { %> 
    <% if(user.job=="Presidente") { %> 
        <div class="w-100">
            <h4 class="text-center text-white popp">Bienvenido Sr. Presidente</h4>
            <div class="row">
                <div class="col">
                    <div class="d-flex flex-column align-items-center justify-content-center mt-4">
                        <p class="text-white">Cuenta de la nacion</p>
                        <a href="/bank/government" class="btn btn-dark w-100 rounded">Banco</a>
                    </div>
                    <div class="col"></div>
                </div>
                <div class="col"></div>
                <div class="col"></div>
                <div class="col"></div>
            </div>
        </div>
    <% } %>
    <% if(user.job=="Reportero") { %> 
        <div class="w-100">
            <h4 class="text-center text-white popp">Bienvenido al area de prensa</h4>
            <div class="row">
                <div class="col">
                    <div class="d-flex flex-column align-items-center justify-content-center mt-4">
                        <p class="text-white">Noticias</p>
                        <a href="/admin/create" class="btn btn-dark w-100 rounded">Crear nueva noticia</a>
                    </div>
                    <div class="col"></div>
                </div>
                <div class="col"></div>
                <div class="col"></div>
                <div class="col"></div>
            </div>
        </div>
    <% } %>
<% } else { %>
    <div>
        <div class="d-flex flex-column align-items-center m-5">
            <img src="assets/triste.png" alt="triste" width="200">
            <h4 class="text-center text-white popp mt-3">Est√°s desempleado</h4>
        </div>
        <p class="text-white popp text-center">Busca trabajo interactuando con otros jugadores.</p>
    </div>
<% } %>
</div>