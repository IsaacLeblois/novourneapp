<%- layout('./layouts/main.ejs') %> 
<h1 class="text-center mt-5">Productos</h1>

<table class="table table-hover align-middle">
  <thead>
    <tr>
      <th scope="col">Imagen</th>
      <th scope="col">Titulo</th>
      <th scope="col">Precio</th>
      <th scope="col">Categorias</th>
      <th scope="col">Accion</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(e => { %>
      <tr>
        <th class="w-25"><img src=<%= e.thumbnail %> alt="imagen" width='120'></th>
        <td><%= e.title %></td>
        <td><%= e.price %></td>
        <td><%= e.categories %></td>
        <td class="d-flex w-100" style="height: 120px;">
            <button class="btn btn-outline-primary w-100">Editar</button>
            <button class="btn btn-outline-danger w-100">Eliminar</button>
        </td>      
      </tr>
    <% }) %>
    <tr>
      <td colspan="5"><a href="/admin/create" class="btn btn-outline-primary w-100" type="button">AÃ±adir un nuevo producto</a></td>     
    </tr>
  </tbody>
</table>